<h1>ログイン</h1>
<div id="login">

<%= form_tag sessions_path do %>
  <div class="field">
    メールアドレス：
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    パスワード：
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "ログイン" %></div>
<% end %>

<%= link_to "新規登録する", :controller => "users", :action => "new" %>
</div>
